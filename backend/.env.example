# Server Configuration
PORT=3001
NODE_ENV=production

# Database
DATABASE_PATH=./karuwa.db

# Brevo SMTP Configuration (for sending emails)
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your-brevo-email@example.com
